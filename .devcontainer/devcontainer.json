// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",

	"features": {
        // This line adds Node.js (and npm) to your Python container
        "ghcr.io/devcontainers/features/node:1": {
            "version": "20" // Use Node.js version 20 or higher
        }
    },
    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "pip3 install --user -r requirements.txt && npm install -g @google/gemini-cli",

	// Features to add to the dev container. More info: https://containers.dev/features.

	// Recommended: Install the VS Code extension inside the container
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python", // Example: Python extension
                "google.gemini-cli-vscode-ide-companion" // Gemini Companion Extension
            ]
        }
    }
}
